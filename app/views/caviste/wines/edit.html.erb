<h1 class='card-title text-center'>Modifier mon vin</h1>
<%= simple_form_for [:caviste, @wine] do |f| %>
  <%= f.input :rating %>
  <%= f.input :name,
              required: true,
              label: "Nom",
              hint: " 15 caractères maximum",
              input_html: { maxlength: 15, size: 40} %>
  <%= f.input :description %>
  <%= f.input :year %>
  <%= f.input :appellation %>
   <%= f.input :photo, as: :file %>

  <div class="card-body d-flex flex-column align-items-center gap-3">
    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  </div>
<% end %>
