<div class="offer-pref">
  <div class="col-md-9 mx-auto">
    <% @offers.each do |offer| %>
      <div class="card-offer">
        <% if offer.offer_photo.present? %>
          <div class="offer-card-img pt-2">
            <%= cl_image_tag offer.offer_photo.key, width: 285, height: 100 %>
          </div>
        <% else %>
          <div class="offer-card-img pt-2" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= image_path "wine.png" %>'); max-height: 150px; max-width: 260px;"></div>
        <% end %>
        <div class="card-btn-title">
          <a href="<%= offer.url %>" class="btn">Cliquez ici</a>
        </div>
        <div class="row foricon">
          <div class="col-md-6">
            <div class="icon">
              <%= image_tag("livraison.png") %><%= (offer.delivery - Date.today).to_i %> jours
            </div>
            <div class="icon">
              <%= image_tag("etiqueter.png") %> <%= offer.price %> euros
            </div>
          </div>
          <div class="col-md-6 middle">
            <div class="icon">
              <%= image_tag("vin.png") %> Stock: <%= offer.quantity %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
