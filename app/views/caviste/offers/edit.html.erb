<h1 class='card-title text-center'>Modifier une offre</h1>
<%= simple_form_for [:caviste, @offer] do |f| %>
  <%= f.association :wine, label: "Vin" %>
  <%= f.input :photo, as: :file %>
  <%= f.input :price, label: "Prix" %>
  <%= f.input :quantity, label: "Quantité" %>
  <%= f.input :address, label: "Adresse" %>
  <%= f.input :delivery,
              label: "Date de livraison",
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :url %>

  <div class="card-body d-flex flex-column align-items-center gap-3">
    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  </div>
<% end %>
