<h1 class='card-title-home text-center'>Nouvelle offre</h1>
<%= simple_form_for [:caviste, @offer] do |f| %>
  <div class="form-group">
    <%= f.input :wine_id, collection: @wines, selected: params["wine_id"], class: 'form-control', input_html: { data: { controller: "wine-selection", action: "change->wine-selection#reloadPage" } }%>
  </div>

  <div class="form-group">
    <%= f.input :price, label: "Prix" %>
  </div>

  <div class="form-group">
    <%= f.input :quantity, label: "Quantité" %>
  </div>

  <div class="form-group">
    <%= f.input :delivery, label: "Date de livraison", as: :string, input_html: { data: { controller: "datepicker" } } %>
  </div>

  <div class="form-group">
    <%= f.input :url, label: "Lien de votre offre", hint: "Accès direct vers votre site" %>
  </div>

  <div class="card-body d-flex flex-column align-items-center gap-3">
    <%= f.submit "Ajouter", class: "btn btn-primary" %>
  </div>
<% end %>
