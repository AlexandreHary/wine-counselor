<div class="fixed-top navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="d-flex align-items-center">
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag "logo.png", style: "border-radius: 50%;"%>
        <% end %>
      <h3 class="title-navbar ml-3">Wine Counselor </h3>
    </div>

    <div class="collapse navbar-collapse dropdown" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in?  %>
            <% if current_user.caviste? %>
              <li class="nav-item">
                <%= link_to "Nouvelle offre", new_caviste_offer_path, class: "nav-link" %>
              </li>
            <% end %>
            <% if current_user.visitor? %>
              <li class="nav-item">
                <%= link_to "Nouvelle recherche", chatrooms_path, data: { turbo_method: :post }, class: "nav-link" %>
              </li>
            <% end %>
          <li class="nav-item profile_picture">
            <!-- J'ai enlever dropdown-toggle à la li du dessus-->
                <%= cl_image_tag current_user.profile_picture.key, data: { bs_toggle:"dropdown"},  aria_expanded: "false" %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <div class="text-center my-3">
              <p><cite title="Bonjour <%= current_user.first_name %>" class="m-0 p-3 mx-0">Bonjour <%= current_user.first_name %></cite></p>
            </div>
              <%= link_to "Se déconnecter", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Se connecter", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
